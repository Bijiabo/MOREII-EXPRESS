extends ../layout

block content
    div.col-md-12#index-image-carousel-box.visible-xs(style="margin-top: -20px;")
        -if(data.image)
            div.carousel.slide#index-image-carousel-small(data-ride="carousel")
                ol.carousel-indicators
                    -for(var i=0,len=data.image.length;i<len;i++)
                        -if(i===0)
                            li.active(data-target="#index-image-carousel-small",data-slide-to="#{i}")
                        -else
                            li(data-target="#index-image-carousel-small",data-slide-to="#{i}")
                div.carousel-inner(role="listbox")
                    -for(var i=0,len=data.image.length;i<len;i++)
                        -if(i===0)
                            div.item.active(style="background-image:url(#{siteUrl}#{data.image[i].path});")
                                //-img(src="#{siteUrl}#{data.image[i].path}",style="margin:auto;")
                                //-div.carousel-caption
                        -else
                            div.item(style="background-image:url(#{siteUrl}#{data.image[i].path});")
                                //-img(src="#{siteUrl}#{data.image[i].path}",style="margin:auto;")
                                //-div.carousel-caption
                a.left.carousel-control(href="#index-image-carousel-small",data-slide="prev")
                    span.glyphicon.glyphicon-chevron-left
                a.right.carousel-control(href="#index-image-carousel-small",data-slide="next")
                    span.glyphicon.glyphicon-chevron-right
    div.container
        div.row.hidden-xs
            div.col-md-12
                -if(data.image)
                    div.carousel.slide#index-image-carousel(data-ride="carousel")
                        ol.carousel-indicators
                            -for(var i=0,len=data.image.length;i<len;i++)
                                -if(i===0)
                                    li.active(data-target="#index-image-carousel",data-slide-to="#{i}")
                                -else
                                    li(data-target="#index-image-carousel",data-slide-to="#{i}")
                        div.carousel-inner(role="listbox")
                            -for(var i=0,len=data.image.length;i<len;i++)
                                -if(i===0)
                                    div.item.active
                                        img(src="#{siteUrl}#{data.image[i].path}",style="margin:auto;")
                                        //div.carousel-caption
                                -else
                                    div.item
                                        img(src="#{siteUrl}#{data.image[i].path}",style="margin:auto;")
                                        //div.carousel-caption
                        a.left.carousel-control(href="#index-image-carousel",data-slide="prev")
                            span.glyphicon.glyphicon-chevron-left
                        a.right.carousel-control(href="#index-image-carousel",data-slide="next")
                            span.glyphicon.glyphicon-chevron-right
        div.row#index-text-box
            -for(var i=0,len=data.text.length;i<len;i++)
                div.col-md-4.col-sm-6
                    div.thumbnail
                        //img(style="width:100%",src="https://d3dgk6r8ca2pzn.cloudfront.net/images/slots/banner/53e9a8445946d.jpg")
                        div.caption
                            h4 #{data.text[i].title}
                            p #{data.text[i].des}
                            p
                                a(href="#{data.text[i].linkurl}") #{data.text[i].linktext} &gt;&gt;
                -if(i<len-1)
                    hr.visible-xs