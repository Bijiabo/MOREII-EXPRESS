extends ../layout

block content
    div.container
        div.row
            div.col-md-9
                div.col-md-12#blog-main.mii-boxborder
                    -for(var i=0;i<blogData.length;i++)
                        div.col-md-12
                            a(href="#{siteUrl}blog/detail/#{blogData[i]._id}")
                                h2= blogData[i].title
                            article!= blogData[i].content
                            div.blog-userinfo= blogData[i].user.name
            div.col-md-3#blog-sidebar
                div.blog-sidebar-item
                    div.input-group
                        input.form-control(type="text")
                        div.input-group-btn
                            button.btn.btn-default(type="button") Search
